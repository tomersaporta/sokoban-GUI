<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorpane" prefHeight="544.0" prefWidth="663.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RecordsWindowController">
   <children>
      <Label layoutX="265.0" layoutY="-1.0" text="Records" textAlignment="JUSTIFY" textFill="#052b7d">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <TextField fx:id="userSearch" layoutX="71.0" layoutY="67.0" onKeyReleased="#searchParams" promptText="User Name" />
      <TextField fx:id="levelSearch" layoutX="236.0" layoutY="67.0" onKeyReleased="#searchParams" promptText="LevelID" />
      <VBox layoutX="398.0" layoutY="56.0" prefHeight="53.0" prefWidth="100.0">
         <children>
            <RadioButton mnemonicParsing="false" onAction="#orderParams" text="steps">
               <toggleGroup>
                  <ToggleGroup fx:id="group" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" onAction="#orderParams" text="time" toggleGroup="$group" />
            <RadioButton mnemonicParsing="false" onAction="#orderParams" text="levelId" toggleGroup="$group" />
         </children>
      </VBox>
      <Button fx:id="searchButton" layoutX="505.0" layoutY="72.0" mnemonicParsing="false" onAction="#search" text="Search" />
      <TableView fx:id="recordTable" layoutX="25.0" layoutY="108.0" prefHeight="392.0" prefWidth="600.0">
        <columns>
          <TableColumn prefWidth="75.0" text="Record ID" />
          <TableColumn prefWidth="75.0" text="Level" />
            <TableColumn prefWidth="75.0" text="User Name" />
            <TableColumn prefWidth="75.0" text="Steps" />
            <TableColumn prefWidth="75.0" text="Time" />
        </columns>
      </TableView>
      <Button fx:id="searchButton1" layoutX="25.0" layoutY="505.0" mnemonicParsing="false" onAction="#search" text="Refresh" />
   </children>
</AnchorPane>
